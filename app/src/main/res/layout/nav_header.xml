<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="156dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/dox" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="105dp"
        android:layout_height="109dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/titre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="210dp"
        android:text="Apropos de l'application"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre : AldoGame"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="275dp" />

    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Createur : HERITRA Aldonis Mick Lewis"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D'apres le mot Malgache 'Misaoma' ,                                                 signifiant 'Jouer avec plaisir'. "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alors quoi attendre de plus, GOOO MISAOMAAA!"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="385dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         _________________  Contact Me  _________________"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp" />

    <ImageView
        android:id="@+id/fb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="150px"
        android:layout_marginTop="1400px"
        app:srcCompat="@drawable/fbb" />

    <TextView
        android:id="@+id/fb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="1550px"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:text="Facebook"/>

    <ImageView
        android:id="@+id/google"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="450px"
        android:layout_marginTop="1400px"
        app:srcCompat="@drawable/gougou" />

    <TextView
        android:id="@+id/google1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="470px"
        android:layout_marginTop="1550px"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:text="Google"/>

    <ImageView
        android:id="@+id/insta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="750px"
        android:layout_marginTop="1400px"
        app:srcCompat="@drawable/insts" />

    <TextView
        android:id="@+id/insta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="750px"
        android:layout_marginTop="1550px"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:text="Instagram"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>