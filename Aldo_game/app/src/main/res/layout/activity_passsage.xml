<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    android:gravity="center"
    tools:context=".PasssageActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Buttonserp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Serpent"
        app:backgroundTintMode="src_over"
        app:backgroundTint="@color/greyreen"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_game"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="179dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Buttontic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tic tac Toe"
        app:backgroundTintMode="src_over"
        app:backgroundTint="@color/greyreen"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_grid"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="238dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Buttondice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Dice"
        app:backgroundTint="@color/greyreen"
        app:backgroundTintMode="src_over"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_casino"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="300dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Buttonquiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="quiz"
        app:backgroundTint="@color/greyreen"
        app:backgroundTintMode="src_over"
        app:cornerRadius="100dp"
        app:icon="@drawable/lumiere"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="300dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ButtonBottle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="About it"
        app:backgroundTint="@color/greyreen"
        app:backgroundTintMode="src_over"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_hour"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="300dp" />


    <Button
        android:id="@+id/exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="-370dp"
        android:icon="@drawable/ic_close"
        android:title="Exit"
        app:backgroundTint="@color/greyreen"
        app:backgroundTintMode="src_over"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_close"
        app:showAsAction="always"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imga"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:srcCompat="@drawable/game" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="" />

    <Button
        android:id="@+id/musOff"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:onClick="pauseIT"
        app:icon="@drawable/ic_music_off"
        app:backgroundTint="@color/teal_700"
        android:layout_marginTop="-190dp"
        android:layout_marginLeft="180dp"
        />
</LinearLayout >


